# This file is automatically generated by Chef
# Any changes will be overwritten

[DEFAULT]
<% if @allow_resize_to_same_host -%>
allow_resize_to_same_host = <%= @allow_resize_to_same_host %>
<% end -%>
block_device_allocate_retries = 120
compute_driver = libvirt.LibvirtDriver
compute_monitors = cpu.virt_driver
<% if @cpu_allocation_ratio -%>
cpu_allocation_ratio = <%= @cpu_allocation_ratio %>
<% end -%>
<% if @disk_allocation_ratio -%>
disk_allocation_ratio = <%= @disk_allocation_ratio %>
<% end -%>
enabled_apis = osapi_compute,metadata
instances_path = /var/lib/nova/instances
instance_usage_audit_period = hour
instance_usage_audit = True
ram_allocation_ratio = 1
resume_guests_state_on_host_boot = True
transport_url = <%= @transport_url %>

[api]
auth_strategy = keystone

[api_database]
connection = <%= @api_database_connection %>

[cache]
memcache_servers = <%= @memcached_endpoint %>
enabled = true
backend = dogpile.cache.memcached

[cinder]
os_region_name = RegionOne

[database]
connection = <%= @database_connection %>

[filter_scheduler]
enabled_filters = <%= @enabled_filters.join(',') %>

[glance]
api_servers = http://<%= @image_endpoint %>:9292

[keystone_authtoken]
auth_type = v3password
auth_url = https://<%= @auth_endpoint %>:5000/v3
memcached_servers = <%= @memcached_endpoint %>
password = <%= @service_pass %>
project_domain_name = Default
project_name = service
region_name = RegionOne
service_token_roles = admin
service_token_roles_required = True
user_domain_name = Default
username = nova
www_authenticate_uri = https://<%= @auth_endpoint %>:5000/v3

[libvirt]
<% if node['kernel']['machine'] == 'x86_64' -%>
cpu_model_extra_flags = VMX
<% end -%>
rbd_secret_uuid = <%= @rbd_secret_uuid %>
rbd_user = <%= @rbd_user %>
virt_type = kvm
<% unless @local_storage -%>
disk_cachemodes = network=writeback
force_raw_images = true
hw_disk_discard = unmap
images_rbd_ceph_conf = /etc/ceph/ceph.conf
images_rbd_pool = <%= @images_rbd_pool %>
images_type = rbd
inject_key = false
inject_partition = -2
inject_password = false
live_migration_flag = VIR_MIGRATE_UNDEFINE_SOURCE,VIR_MIGRATE_PEER2PEER,VIR_MIGRATE_LIVE,VIR_MIGRATE_PERSIST_DEST,VIR_MIGRATE_TUNNELLED
<% end -%>

[neutron]
auth_type = password
auth_url = https://<%= @auth_endpoint %>:5000/v3
disk_allocation_ratio = 1.5
metadata_proxy_shared_secret = <%= @metadata_proxy_shared_secret %>
password = <%= @neutron_pass %>
project_domain_name = Default
project_name = service
region_name = RegionOne
service_metadata_proxy = true
user_domain_name = Default
username = neutron

[notifications]
notify_on_state_change = vm_and_task_state

[oslo_concurrency]
lock_path = /var/lib/nova/tmp

[oslo_messaging_notifications]
driver = messagingv2
<% if @pci_alias -%>

[pci]
alias = <%= @pci_alias %>
<% if @pci_passthrough_whitelist -%>
passthrough_whitelist = <%= @pci_passthrough_whitelist %>
<% end -%>
<% end -%>

[placement]
auth_type = password
auth_url = https://<%= @auth_endpoint %>:5000/v3
password = <%= @placement_pass %>
project_domain_name = Default
project_name = service
region_name = RegionOne
user_domain_name = Default
username = placement

[scheduler]
discover_hosts_in_cells_interval = 300

[serial_console]
base_url = ws://<%= @endpoint %>:6083

[service_user]
auth_type = password
auth_url = https://<%= @auth_endpoint %>:5000/v3
password = <%= @service_pass %>
project_domain_name = Default
project_name = service
send_service_user_token = true
user_domain_name = Default
username = nova

[vnc]
enabled = true
novncproxy_base_url = https://<%= @endpoint %>:6080/vnc_auto.html
server_listen = <%= node['ipaddress'] %>
